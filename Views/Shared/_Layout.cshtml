@* /Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewBag.Title – Real Estate Management System</title>

    <!-- Core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")    @* site.css, custom themes, … *@

    <!-- Modernizr (only needed for legacy feature detection) -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- ===== NAVBAR ================================================= -->
    <nav class="navbar navbar-expand-sm navbar-light bg-light shadow-sm">
        <div class="container">

            @* Brand / logo – points to Home/Index *@
            @Html.ActionLink(
                "REMS",
                "Index",
                "Home",
                routeValues: null,
                htmlAttributes: new { @class = "navbar-brand fw-bold" })

            <!-- Mobile toggle -->
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible links -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- left‑aligned -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Properties", "Index", "Property", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>

                <!-- right‑aligned -->
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Login", "Login", "User", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("+ Add Property",
                                          "Create",
                                          "Property",
                                          null,
                                          new { @class = "btn btn-success ms-2 text-white" })
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>

    <!-- ===== PAGE CONTENT =========================================== -->
    <div class="container body-content pt-3">
        @RenderBody()

        <hr />
        <footer class="pb-3">
            <p class="text-muted mb-0">
                &copy; @DateTime.Now.Year – Real Estate Management System
            </p>
        </footer>
    </div>

    <!-- ===== SCRIPTS ================================================ -->
    @Scripts.Render("~/bundles/jquery")    @* jQuery (needed by Bootstrap JS) *@
    @Scripts.Render("~/bundles/bootstrap") @* bootstrap.bundle.js (v5)       *@
    @RenderSection("scripts", required: false)
</body>
</html>  