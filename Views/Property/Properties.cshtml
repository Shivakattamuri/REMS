@model IEnumerable<REMS.Models.Property>

@{
    ViewBag.Title = "Properties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Available Properties</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@item.Image1" class="card-img-top" alt="Property Image"
                     style="height: 200px; object-fit: cover;" />

                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Location</p>
                    <p><strong>Price:</strong> ₹@item.Price</p>
                    <p><strong>Status:</strong> @item.Status</p>
                    @*<p><strong>Type:</strong> @item.PropertyType?.TypeName</p>*@

                    <a href="@Url.Action("Details", "Property", new { id = item.PropertyId })"
                       class="btn btn-primary btn-sm">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
