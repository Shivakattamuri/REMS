@* /Views/Property/PropertyList.cshtml *@
@{
    ViewBag.Title = "Property";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">Available Properties</h2>
<div class="row">
    @foreach (var property in ViewBag.Properties)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@property.Title</h5>
                    <p class="card-text">@property.Description</p>
                    <p><strong>Location:</strong> @property.Location</p>
                    <p><strong>Price:</strong> ₹@property.Price</p>
                    <p><strong>Type:</strong> @property.PropertyType</p>
                    <p><strong>Status:</strong> @property.Status</p>
                    <a href="/Property/Details/@property.Id" class="btn btn-info">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
