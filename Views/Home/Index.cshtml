@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hero-section {
        background-image: url('/Content/images/rems3.jpg');
        background-size: cover;
        background-position: center;
        height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
    }

    .hero-content {
        max-width: 800px;
        width: 100%;
    }

    .hero-text {
        background-color: rgba(0, 51, 153, 0.7);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .search-box {
        background-color: rgba(255, 255, 255, 0.2);
        padding: 30px;
        border-radius: 10px;
        box-shadow: none;
        backdrop-filter: blur(6px);
    }

        .search-box select,
        .search-box button {
            min-width: 180px;
            margin: 8px;
        }
</style>

<div class="hero-section">
    <div class="hero-content">
        <div class="hero-text text-center text-white">
            <h2 class="mb-2">Welcome to Real Estate Management System</h2>
            <h3 class="mb-2">Find Your Favorite Property</h3>
            <p class="lead">Find the best properties for Sale, Rent, or Investment</p>
        </div>

        <div class="text-center">
            <div class="search-box d-flex flex-wrap justify-content-center">
                @using (Html.BeginForm("Search", "Property", FormMethod.Get, new { @class = "form-inline justify-content-center mt-4" }))
                {
                    @Html.TextBox("city", null, new { @class = "form-control mx-2", placeholder = "Enter City" })

                    @Html.DropDownList("propertyType", new SelectList(new[] {
                        "Apartment", "Villa", "House", "Plots"
                    }), "Select Property Type", new { @class = "form-select mx-2" })

                    @Html.DropDownList("status", new SelectList(new[] {
                        "Buy", "Sale", "Rent"
                    }), "Select Status", new { @class = "form-select mx-2" })

                    <button type="submit" class="btn btn-primary mx-2">Search</button>
                }
            </div>
        </div>
    </div>
</div>

